{
	"name": "api",
	"version": "1.0.0",
	"description": "API for ToDo lists application",
	"keywords": [
		"todo"
	],
	"homepage": "https://github.com/nikitoss888/todo_app",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nikitoss888/todo_app.git"
	},
	"license": "ISC",
	"author": "Oleksiichuk Mykyta",
	"type": "module",
	"main": "dist/server.ts",
	"scripts": {
		"build": "tsc -p tsconfig.build.json",
		"prisma:generate": "prisma generate",
		"prisma:push": "prisma db push",
		"prisma:deploy": "prisma migrate deploy",
		"prisma:studio": "prisma studio",
		"start": "node dist/server.js",
		"dev": "tsx --respawn --transpile-only src/server.ts",
		"pretty:check": "prettier . --check",
		"pretty": "prettier --write .",
		"lint:check": "eslint .",
		"lint": "eslint . --fix",
		"check": "npm run pretty && npm run lint",
		"test:prepare": "tsx src/tests/resetTestDb.ts",
		"test": "cross-env NODE_ENV=test dotenv -e .env.test -- jest"
	},
	"devDependencies": {
		"@eslint/js": "^9.29.0",
		"@types/express": "^5.0.3",
		"@types/jest": "^30.0.0",
		"@types/supertest": "^6.0.3",
		"cross-env": "^7.0.3",
		"dotenv-cli": "^8.0.0",
		"eslint": "^9.29.0",
		"eslint-config-prettier": "^10.1.5",
		"globals": "^16.2.0",
		"jest": "^30.0.0",
		"prettier": "^3.5.3",
		"prisma": "^6.9.0",
		"superagent": "^10.2.1",
		"supertest": "^7.1.1",
		"ts-jest": "^29.4.0",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.34.1"
	},
	"dependencies": {
		"@prisma/client": "^6.9.0",
		"@types/bcrypt": "^5.0.2",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/node": "^24.0.3",
		"bcrypt": "^6.0.0",
		"cors": "^2.8.5",
		"dotenv": "^16.5.0",
		"express": "^5.1.0",
		"jsonwebtoken": "^9.0.2"
	}
